{
  "manifest_version": 3,
  "name": "Colonist Buddy",
  "version": "2.1.0",
  "description": "Track dice rolls, resource counts, and game statistics while playing catan on Colonist.io",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://colonist.io/*",
        "*://*.colonist.io/*"
      ],
      "js": ["msgpack.min.js", "websocket-sniffer.js", "content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "images/*.svg",
        "images/*.png"
      ],
      "matches": [
        "*://colonist.io/*",
        "*://*.colonist.io/*"
      ]
    }
  ]
}
