{
  "manifest_version": 3,
  "name": "Colonist Buddy",
  "version": "3.0.0",
  "description": "Real-time WebSocket-based game tracking for Catan on Colonist.io - tracks dice, resources, and board state",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://colonist.io/*",
        "*://*.colonist.io/*"
      ],
      "js": ["msgpack.min.js", "websocket-sniffer.js", "websocket-game-tracker.js"],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": true
    },
    {
      "matches": [
        "*://colonist.io/*",
        "*://*.colonist.io/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "images/*.svg",
        "images/*.png"
      ],
      "matches": [
        "*://colonist.io/*",
        "*://*.colonist.io/*"
      ]
    }
  ]
}
